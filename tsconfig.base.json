{
  "compilerOptions": {
    "alwaysStrict": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "noErrorTruncation": true
  }
}